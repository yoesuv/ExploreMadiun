<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/fragment_info_margin"
        android:layout_marginRight="@dimen/fragment_info_margin"
        android:layout_marginTop="@dimen/fragment_info_margin">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewAppInfo"
            android:layout_width="@dimen/image_view_app_info"
            android:layout_height="@dimen/image_view_app_info"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder_image"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_info_margin"
            android:layout_marginStart="@dimen/fragment_info_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageViewAppInfo"
            android:layout_toEndOf="@id/imageViewAppInfo">

            <com.yoesuv.infomadiun.widgets.GothicA1BoldTextView
                android:id="@+id/textViewAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textSize="18sp"/>

            <com.yoesuv.infomadiun.widgets.GothicA1RegularTextView
                android:id="@+id/textViewVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>