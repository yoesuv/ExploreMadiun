            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_tab_strip"
            android:textSize="@dimen/title_libraries"
            android:textColor="@color/default_text_color"/>

        <com.yoesuv.infomadiun.widgets.GothicA1RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_tab_strip_url"
            android:textSize="@dimen/url_libraries"
            android:textColor="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewNavigationTabStripLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/retrofit_license"
            android:textSize="@dimen/license_libraries"
            android:textColor="@color/default_text_color"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>