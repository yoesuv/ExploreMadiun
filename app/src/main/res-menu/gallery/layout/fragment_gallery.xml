<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="gallery"
            type="com.yoesuv.infomadiun.menu.gallery.viewmodels.FragmentGalleryViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showView="@{safeUnbox(gallery.isLoading)}">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewGallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:hideView="@{safeUnbox(gallery.isLoading)}"/>

        <include
            android:id="@+id/layoutGalleryError"
            layout="@layout/include_error"/>

    </RelativeLayout>

</layout>