<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="listPlace"
            type="com.yoesuv.infomadiun.menu.listplace.viewmodels.FragmentListPlaceViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshListPlace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showView="@{safeUnbox(listPlace.isLoading)}"
            android:visibility="@{safeUnbox(listPlace.isError()) ? View.INVISIBLE : View.VISIBLE }">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewListPlace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_list_place"
                tools:itemCount="10"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:hideView="@{safeUnbox(listPlace.isLoading)}"/>

        <include
            android:id="@+id/layoutError"
            android:visibility="@{safeUnbox(listPlace.isError()) ? View.VISIBLE : View.GONE }"
            layout="@layout/include_error"/>

    </RelativeLayout>

</layout>