<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="8dp">

    <com.yoesuv.infomadiun.widgets.SquareImageView
        android:id="@+id/imageViewPopupListPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/placeholder_image"/>

    <com.yoesuv.infomadiun.widgets.ToolbarTextView
        android:id="@+id/textViewPopUpListPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

    <com.yoesuv.infomadiun.widgets.GothicA1RegularTextView
        android:id="@+id/textViewPopUpListPlaceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"/>

</LinearLayout>