<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageviewDialogMaps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/img_default"/>

        <LinearLayout
            android:id="@+id/layoutLoading"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <include layout="@layout/item_loading"/>

            <com.yoesuv.infomadiun.utils.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_wait_image"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewDirections"
            app:cardBackgroundColor="@color/white_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDirections"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_directions_white"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <com.yoesuv.infomadiun.utils.RobotoRegularTextView
        android:id="@+id/textviewNameDialogMaps"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

</LinearLayout>